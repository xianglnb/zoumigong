#include<stdio.h>
#include<windows.h>
#include<conio.h>
#include<string.h>
#include <time.h>
char map[100][100]={
	"S#*********",
	"***###*###*",
	"###**#****#",
	"*#**###**#*",
	"***********",
	"#####*##*##",
	"**#*****#*E",
	"***#*###**#",
	"*#*********",
};
int N=9,M=11;
int curX=0,curY=0,mg_x=20,mg_y=10,tips_x=10,tips_y=30,intro_x=10,intro_y=45;
void gotoxy(int x,int y){
	COORD pos;
	pos.X=x,pos.Y=y;
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),pos);
}
void setColor(unsigned int color){//
	/*
	#define FOREGROUND_BLUE      0x0001 // text color contains blue.
	#define FOREGROUND_GREEN     0x0002 // text color contains green.
	#define FOREGROUND_RED       0x0004 // text color contains red.
	#define FOREGROUND_INTENSITY 0x0008 // text color is intensified.
	*/
	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE),color);
}
void outtips(){
	gotoxy(tips_x,tips_y);
	for(int i=0;i<=60;i++)
		printf("*");
	gotoxy(tips_x,tips_y+1);
	printf("*");
	for(i=0;i<59;i++)
		printf(" ");
	printf("*");

	gotoxy(tips_x,tips_y+2);
	for(i=0;i<=60;i++)
		printf("*");
}
void outtips_text(char *s){
	gotoxy(tips_x+1,tips_y+1);
	for(int i=0;i<=58;i++)
		printf(" ");
	gotoxy(tips_x+1,tips_y+1);
	printf("%s\a\a\a",s);
}

void printPerson()
{
	printf("*");
	gotoxy(curX+mg_x,curY+mg_y);
	printf("A");
}
void rand_pic(){
	unsigned int x,y,c;
	srand(time(NULL));
	while(1){
		x=rand()%90,y=rand()%40;c=rand()%16;
		gotoxy(x,y);
		setColor(c);
		printf("%c\b",65+rand()%26);
		Sleep(1000);
	}
}
void printMap()
{
	for(int i=0;i<N;i++)
	{
		gotoxy(mg_x,mg_y+i);
		printf("%s\n",map[i]);
	}
}

void myMove(char dir){
	switch(dir)
	{
		case 'w':
		case 'W':
			curY--;
			if(curY<0) curY=0;
			if(map[curY][curX]=='#') curY++;
			break;
		case 's':
		case 'S':
			curY++;
			if(curY>=N) curY=N-1;
			if(map[curY][curX]=='#') curY--;
			break;
		case 'a':
		case 'A':
			curX--;
			if(curX<0) curX=0;
			if(map[curY][curX]=='#') curX++;
			break;
		case 'd':
		case 'D':
			curX++;
			if(curX>=M) curX=M-1;
			if(map[curY][curX]=='#') curX--;
			break;			
	}

}
void main()
{
	//rand_pic();
	printMap();
	outtips();
	time_t s=time(0),e;
	setColor(FOREGROUND_RED);
	printPerson();
	outtips_text("提示：a--左  d--右  w--上  s--下,按任意键开始游戏并计时！");
	getch();
	while(1){
		char ch;
		gotoxy(curX+mg_x,curY+mg_y);
		fflush(stdin);
		ch=getch();
		if(ch!='a'&&ch!='A'&&ch!='d'&&ch!='D'&&ch!='s'&&ch!='S'&&ch!='w'&&ch!='W'){
			outtips_text("提示：a--左  d--右  w--上  s--下\a\a\a");
			continue;
		}
		myMove(ch);
		printPerson();
		if(map[curY][curX]=='E'){
			e=time(0);
			char ss[100];
			sprintf(ss,"通过成功,用时%d秒！",(e-s));
			outtips_text(ss);
			break; 
		} 
	}
 }
